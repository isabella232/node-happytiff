#!/usr/bin/env node

var happytiff = require('../index.js');
var path = require('path');

if (!process.argv[2]) {
    console.log('Usage: happytiff <filepath>');
    process.exit(1);
}

happytiff.info(path.resolve(process.argv[2]), function(err, info) {
    if (err) {
        console.warn(err.toString());
        process.exit(3);
    }
    console.log(JSON.stringify(info, null, 2));
});

